<section class="table-comp">
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>C.No</th>
          <th>Room Number</th>
          <!-- <th>Room-Number</th> -->
          <th>Complaint Type</th>
          <th>Slot Booked</th>
          <th>Date</th>
          <th>Status</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% for(let i = 0; i < complaints.length; i++) { %>
          <tr>
            <td class="cf1"><%= i+1 %></td>
            <td ><%= complaints[i].room %></td>
            <td class="cf1"><%= complaints[i].type %></td>
            <td><%= complaints[i].slot %></td>
            <td><%= complaints[i].date.getDate()%>-<%=complaints[i].date.getMonth()%>-<%= complaints[i].date.getFullYear()%></td>
            <td><button class="status-btn" id="st-btn1" onclick="myfunction(1)" ><%= complaints[i].status %></button></td>
          </tr>
        <% } %>
